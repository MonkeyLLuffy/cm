
var userId;
var tableData;
$(function(){
    var Request = new Object();  
    Request = GetRequest();  
    userId= Request["id"];   
    //加载所有的角色
	loadTable();
	//设置用户已有的角色
	setUserRole(userId);
	
});
function setUserRole(userId){
	$.ajax({
	    type: "POST",
	    url: "/cm/role/getUserRole.action",
	    async: true,
	    data:
	    {
	    	userId: userId
	    },
	    success: function (result) {
	        if (result && result != "") {
	            var json = eval('('+result+')');
	            //对已有的设置为勾选
	            for (var i in json) {
	                var d = json[i];
	            	$("#"+d.id).prop("checked", true);
	            	alert($("#"+d.id).prop("checked"));
	            }
	        }
	    }
	   });
	
}
function loadTable(){
	$.ajax({
    type: "POST",
    url: "/cm/role/getRoleWithPaging.action",
    async: true,
    data:
    	
    	
    {
        page: 1,
        rows: 30
    },
    success: function (result) {
        if (result && result != "") {

            var json = eval('('+result+')');
            tableData = json.data;
            var html = '<tr>';
            for (var i in tableData) {
                var d = tableData[i];
                var num = i;
                num = parseInt(num) + 1;
                html += ('<td>' +
                    '<input type="checkbox" name="checkItems" id='+d.id+' />' +d.id+//复选框
                    '</td><td><div class="div_short">' + d.roleName +//角色名
                    '</div></td>');
                if (num%3 == 0) {
					html += '</tr>';
					console.log(html);
	                $('#tableBody').append(html);
					html = '<tr>';
				}
                if ( num == tableData.length) {
					if (tableData.length%3 == 1 ) {
						//加两个空的
						html += '<td></td><td></td><td></td><td><div class="div_short"></div></td></tr>';
		                $('#tableBody').append(html);
		                
					}else if(tableData.length%3 == 2 ) {
						html += '<td></td><td><div class="div_short"></div></td></tr>';
		                $('#tableBody').append(html);
		                
					}
				}
                
            }
        }
    }
});
}
function GetRequest() {  
    var url = location.search; //获取url中"?"符后的字串   
    var theRequest = new Object();  
    if (url.indexOf("?") != -1) {  
        var str = url.substr(1);  
        strs = str.split("&");  
        for (var i = 0; i < strs.length; i++) {  
            theRequest[strs[i].split("=")[0]] = unescape(strs[i].split("=")[1]);  
        }  
    }  
    return theRequest;  
}  
//重置
function clearCheckBox(){
	$("[name = checkItems]:checkbox").prop("checked", false);
}

//跳转用户设置
function backLastPage(){
	alert();
}
/*
 * 批量保存
 * */
function save(){
	var roleIds = new Array();
	var n = 0;
	for (var i in tableData) {
		if($('[name=checkItems]')[i].checked==true){
			var d = tableData[i];
			roleIds[n++] = d.id;
		}
	}
	alert("roleIds.length:"+roleIds.length);
	$.ajax({
        type: "POST",
        url: "/cm/user/setRole.action",
        data:
            {
        	roleIds: roleIds,
        	userId:userId
        },
        async: true,
        traditional: true,
        success: function (result) {
        	alert("保存成功");
        }
	});
	    	
	    	
}