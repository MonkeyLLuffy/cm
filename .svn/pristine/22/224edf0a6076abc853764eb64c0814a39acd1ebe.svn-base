   rows = parseInt(rows);
   
   var html = "";
   if( totalPage == 0 ){
   	html+='<font class="page_all">对不起,暂时没有数据</font>';
   }else if( totalPage == 1 ){
   	html += '<font class="page_all">1</font><div class="page_all">共1页</div>';
   }else{ 
   	if( totalPage<=5 && totalPage>1 ){
