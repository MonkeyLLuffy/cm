}



// 刷新页面
function PageReload(newPage,newRows ) {	

	//清空table内容
	$('#tableBody').empty();
    page = newPage;
    rows = newRows;
    loadTable(name);
    $("#input_role").val(name)

}
//分页
function paging(total,totalPage){
