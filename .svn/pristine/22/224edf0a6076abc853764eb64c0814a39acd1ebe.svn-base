	        	$.ajax({
	        	    type: "POST",
	        	    url: "/cm/role/delete.action",
	        	    data:
	        	        {
	        	            id: id
	        	        },
	        	    async: true,
	        	    success: function (result) {
	                	$( "#dialog-confirm-delete" ).dialog( "close" );
